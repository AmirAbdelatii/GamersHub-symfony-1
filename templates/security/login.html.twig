{% extends 'authBase.html.twig' %}

{% block title %}Log in{% endblock %}

{% block auth %}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-area">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       autocomplete="username" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            #}
            <div class="checkbox mb-3" style="width: min-content;display: flex;justify-content: center;align-items: center;">
                <input type="checkbox" name="_remember_me" style="width: 20px;height:20px;margin-top: -7px;">
                <label style="width: max-content;margin-left: 10px;">Remember me </label>
            </div>

            <div class="form-group">
                <button class="cmn-btn" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
{% endblock %}

{% block otherAuth %}
    <p>Don't have an account? <a href="{{ path("register") }}">Sign Up</a></p>
{% endblock %}
