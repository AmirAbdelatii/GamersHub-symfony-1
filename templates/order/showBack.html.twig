{% extends 'backBase.html.twig' %}
{% block title %}Categories{% endblock %}
{% block addFilesHead %}
<!-- Bootstrap -->

<link href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css">
<!-- Datatables -->
<link href="{{asset('/back/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css')}}" rel="stylesheet">
<link href="{{asset('/back/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css')}}" rel="stylesheet">
<link href="{{asset('/back/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css')}}"
  rel="stylesheet">
<link href="{{asset('/back/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css')}}" rel="stylesheet">
<link href="{{asset('/back/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css')}}" rel="stylesheet">
{% endblock %}
{% block content %}
<br>

<div class="col-md-12 col-sm-12 " style="padding-bottom: 235px;">
  <div class="x_panel">
    <h2>Orders Table </h2>
    <div class="x_title" >
      
    <div class="x_content">
        <br>
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box table-responsive">

            <table id="datatable-keytable" class="table table-striped table-bordered" style="width:100%">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Price</th>
                  <th>userName</th>
                  <th>isCanceled</th>
                  <th></th>
                </tr>
              </thead>


              <tbody>
                {% for order in orders %}
                <tr>
                  <td>{{ order.getId() }}</td>
                  <td>{{ order.totalprice() }}</td>
                  <td>{{ order.user.username }}</td>
                 
                 
                  <td>{% if order.isCanceled() == 0 %}
                    <span class="badge badge-danger" style="color: white;font-size:unset">Canceled</span>
                    {% else %}
                    <span class="badge badge-success" style="color: white;font-size:unset">notCanceled</span>
                    {% endif %}
                  </td>
                  <td >
                        <a class="fa fa-trash" href="{{path('orderdelete',{ id:order.getId() })}}"></a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
