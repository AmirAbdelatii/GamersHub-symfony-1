<!-- Shop Content Start -->
<div id="shop-content">
    <div class="container">
        <div class="shop-details-content">
            <div class="row justify-content-center cus-pad">
                <div class="col-lg-6">
                    <div class="xzoom-container">
                        {% set images = product.image| trim('*') | split("*") %}
                        <img class="xzoom5" id="xzoom-magnific" alt="image" src="{{asset('shop/images/'~images[0])}}"
                            xoriginal="{{asset('shop/images/'~images[0])}}" />
                        <div class="xzoom-thumbs">

                            <div class="all-slider">
                                {% for image in images %}
                                <a href="{{asset('shop/images/'~image)}}">
                                    <img class="xzoom-gallery5" alt="image" src="{{asset('shop/images/'~image)}}">
                                </a>
                                {% endfor %}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="right-item">
                        <h4>{{ product.getNameProduct() }}</h4>
                        <p>
                            {{ product.getDescription() }}
                        </p>
                        <div class="review">
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star"></i></a>
                            <a href="#"><i class="fas fa-star-half-alt"></i></a>
                            <span class="text-sm">4.3 (79)</span>
                        </div>
                        <div class="prize">
                            <p>{{ product.getQuantityStocked()}}</p>
                            <span class="text-sm">currently in stock</span>
                        </div>
                        <div class="bottom-area d-flex align-items-center">
                            <h5>{{ product.getPrice() }} COINS</h5>
                            {% if  user is not null %}
                            <a href="{{path('cartadd',{ id:product.getId() })}}" class="cmn-btn">Add to Cart</a>
                            {% endif %}
                        </div>
                        <div class="social d-flex align-items-center">
                            <p>Share:</p>
                            <ul class="d-flex">
                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
